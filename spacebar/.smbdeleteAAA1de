#!/bin/sh

while true; 
do 
  ETH=$(curl -s 'rate.sx/eth@1d' | grep change| sed -r 's/.*\((.*)\).*/\1/'); 
  BTC=$(curl -s 'rate.sx/btc@1d' | grep change| sed -r 's/.*\((.*)\).*/\1/'); 
  VTI=$(curl -s https://terminal-stocks.herokuapp.com/VTI | grep - | head -n1 | python -c "import sys,re;[sys.stdout.write(re.sub('│.*?│.*?│.*?│\w*?(.*?)\w*?│.*', r'\1', line)) for line in sys.stdin]" | sed 's/ //g'); 
  clear; 
  echo "BTC: $BTC ETH: $ETH VTI: $VTI \%" | strip-ansi| rev | cut -c2-| rev | sed -e 's/$/\%/g'; 
  sleep 60; 
done
