sketchybar -m config height               25
sketchybar -m config padding_left         10
sketchybar -m config padding_right        10
sketchybar -m config bar_color            0xaa${background:1} #0xaf202020

sketchybar -m add component space home left
sketchybar -m set home associated_display 1
sketchybar -m set home associated_space 1
sketchybar -m set home label_font "Iosevka Nerd Font:Mono:16.0"
sketchybar -m set home icon_font "Iosevka Nerd Font:Mono:16.0"
sketchybar -m set home icon ﮟ # # #
sketchybar -m set home icon_color 0xffffffff
sketchybar -m set home icon_highlight_color 0xff48aa2a
sketchybar -m set home label_padding_left 2
# sketchybar -m set home label home
sketchybar -m set home click_script "yabai -m space --focus 1"

sketchybar -m add item spaceSep left
sketchybar -m set spaceSep associated_display 1
sketchybar -m set spaceSep icon_font "Iosevka Nerd Font:Bold:15.0"
#sketchybar -m set spaceSep icon 
sketchybar -m set spaceSep icon_padding_right 8
sketchybar -m set spaceSep icon_padding_left 8

sketchybar -m add component space social left
